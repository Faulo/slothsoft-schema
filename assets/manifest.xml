<?xml version="1.0"?>
<assets xmlns="http://schema.slothsoft.net/farah/module">
	<resource-directory name="css" type="text/css" />
	<resource-directory name="xsl" type="application/xslt+xml" />

	<resource-directory name="dictionary" type="application/xml" />

	<directory name="schema">
		<resource-directory name="versioning" type="application/x-xsd+xml" />
	</directory>

	<fragment name="html">
		<fragment name="home">
			<use-template ref="/xsl/schema.home" name="schema.home" />
			<use-document ref="/api/info" name="schema-info" />
			<import ref="//slothsoft@core/api/HTML5" name="HTML5" />
			<link-stylesheet ref="/css/default" name="default" />
		</fragment>
		<fragment name="documentation">
			<use-template ref="/xsl/schema.documentation" name="schema.documentation" />
			<use-document ref="/api/info" name="schema-info" />
			<use-document ref="/api/manifest" name="schema-manifest" />
			<import ref="//slothsoft@core/api/HTML5" name="HTML5" />
			<link-stylesheet ref="/css/default" name="default" />
		</fragment>
	</fragment>

	<fragment name="api">
		<custom-asset name="info" executable-builder="Slothsoft\Schema\Assets\InfoBuilder"
			parameter-filter="Slothsoft\Schema\Assets\SchemaParameterFilter" />
		<custom-asset name="manifest" executable-builder="Slothsoft\Schema\Assets\ManifestBuilder"
			parameter-filter="Slothsoft\Schema\Assets\SchemaParameterFilter" />
	</fragment>
</assets>
